<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.controllers.admin.ProfileController"
            stylesheets="@../../styles/ProfilePage.css"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <HBox spacing="10" alignment="CENTER">
            <Label text="User Profile" styleClass="profile-title"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER_LEFT" styleClass="profile-container">
            <HBox spacing="10">
                <Label text="Name:"/>
                <Label fx:id="nameLabel"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Email:"/>
                <Label fx:id="emailLabel"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Contact:"/>
                <Label fx:id="contactLabel"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Address:"/>
                <Label fx:id="addressLabel"/>
            </HBox>
            <Button text="Back to Dashboard" onAction="#onBackClick" styleClass="back-button"/>
        </VBox>
    </center>

</BorderPane>